{
  "name": "Lingaro Azure Databricks Py312 Ubuntu24 Gemini",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "lingaro-azure-databricks-py312-ubuntu24-gemini",
  "workspaceFolder": "/workspaces/lingaro-azure-databricks-py312-ubuntu24-gemini",
  "shutdownAction": "stopCompose",
  "postCreateCommand": "${containerWorkspaceFolder}/scripts/post-create.sh",
  "postAttachCommand": "${containerWorkspaceFolder}/scripts/post-attach.sh",
  "postStartCommand": "${containerWorkspaceFolder}/scripts/post-start.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.pylint",
        "ms-python.black-formatter"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.formatting.provider": "black",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        // Ensure VS Code uses bash inside the Linux container (avoid zsh -l issues)
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash"
          },
          "sh": {
            "path": "/bin/sh"
          }
        }
      }
    }
  },
  "forwardPorts": [8000],
  "portsAttributes": {
    "8000": {
      "label": "Application",
      "onAutoForward": "notify"
    }
  }
}