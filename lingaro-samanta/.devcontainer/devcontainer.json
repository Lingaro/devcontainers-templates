{
  "name": "lingaro-samanta",
  "dockerComposeFile": ["docker-compose.yml"],
  "service": "samanta",
  "runServices": ["mariadb", "dbx"],
  "remoteUser": "user",
  "shutdownAction": "stopCompose",
  "features": {
    // Note: IntelliJ ignores this; Docker socket mounted in docker-compose.yml instead
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
  },
  "workspaceFolder": "/samanta",
  "containerEnv": {
    "COMPOSE_FILE": "${containerWorkspaceFolder}/.devcontainer/docker-compose.yml",
    "SPARK_CONF_DIR": "/samanta/config",
    "SPARK_CONF_FILE": "/samanta/config/spark-defaults.conf"
  },
  "postCreateCommand": "${containerWorkspaceFolder}/.devcontainer/scripts/post-create.sh",
  "updateContentCommand": "",
  "postStartCommand": "${containerWorkspaceFolder}/.devcontainer/scripts/post-start.sh",
  "postAttachCommand": "${containerWorkspaceFolder}/.devcontainer/scripts/post-attach.sh",
  "customizations": {
    "vscode": {
      "settings": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false,
        "terminal.integrated.defaultProfile.linux": "zsh"
      },
      "extensions": [
        "dbaeumer.vscode-eslint",
        "scalameta.metals",
        "scala-lang.scala",
        "ms-azuretools.vscode-docker",
        "mhutchie.git-graph",
        "editorconfig.editorconfig",
        // "anthropic.claude-code",
        "qwenlm.qwen-code-vscode-ide-companion",
        "saoudrizwan.claude-dev",
        "github.copilot",
        "github.copilot-chat"
      ]
    },
    "jetbrains": {
      "backend": "IntelliJ",
      "plugins": [
        "Docker",
        "org.intellij.scala",
        "com.intellij.database",
        "com.github.sbt.sbt-idea-plugin",
        "org.jetbrains.plugins.hocon",
        "com.jetbrains.plugins.webstorm.copilot",
        "com.github.copilot"
      ]
    }
  }
  // "forwardPorts": [3306],
  // "portsAttributes": {
  //   "3306": {
  //     "label": "MariaDB",
  //     "onAutoForward": "notify"
  //   }
  // }
}
