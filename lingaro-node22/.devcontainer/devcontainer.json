{
  "name": "lingaro-node22",
  "dockerComposeFile": ["docker-compose.yml"],
  "service": "dev",
  "remoteUser": "lingaro",
  "workspaceFolder": "/app",
  "shutdownAction": "stopCompose",
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
  },
  "containerEnv": {
    "COMPOSE_FILE": "${containerWorkspaceFolder}/.devcontainer/docker-compose.yml"
  },
  "postCreateCommand": "${containerWorkspaceFolder}/.devcontainer/scripts/post-create.sh",
  "updateContentCommand": "",
  "postStartCommand": "${containerWorkspaceFolder}/.devcontainer/scripts/post-start.sh",
  "postAttachCommand": "${containerWorkspaceFolder}/.devcontainer/scripts/post-attach.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "ms-python.python",
        "ms-python.pylint",
        "ms-python.black-formatter",
        // "anthropic.claude-code",
        "qwenlm.qwen-code-vscode-ide-companion",
        "saoudrizwan.claude-dev",
        "github.copilot",
        "github.copilot-chat"
      ],
      "settings": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false,
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  "forwardPorts": [3000, 3001],
  "portsAttributes": {
    "3000": {
      "label": "Node App [DEV]",
      "onAutoForward": "notify"
    },
    "3001": {
      "label": "Node App [PROD]",
      "onAutoForward": "notify"
    }
  }
}
