# CCEP UDP Development Environment Configuration
# Copy this file to .env and configure the values for your environment

# ==============================================================================
# Azure Configuration (Required)
# ==============================================================================
# Get these values from your Azure App Registration
AZURE_TENANT_ID=your-tenant-id-here
AZURE_CLIENT_ID=your-client-id-here  
AZURE_CLIENT_SECRET=your-client-secret-here

# ==============================================================================
# Databricks Configuration (Required for Databricks CLI)
# ==============================================================================
# Databricks workspace URL (e.g., https://your-workspace.cloud.databricks.com)
DATABRICKS_HOST=

# Databricks personal access token or OAuth credentials
# Option 1: Personal Access Token (recommended for development)
DATABRICKS_TOKEN=

# ==============================================================================
# Development Ports Configuration
# ==============================================================================
# Jupyter Lab port
JUPYTER_PORT=8888
JUPYTER_TOKEN=

# Spark UI port
SPARK_UI_PORT=4040

# Hadoop ports
HADOOP_NAMENODE_PORT=9870
HADOOP_DATANODE_PORT=9864

# Application port
APP_PORT=8000

# ==============================================================================
# Python Environment Configuration
# ==============================================================================
# Additional Python paths for CCEP UDP modules
# These will be automatically set in PYTHONPATH by docker-compose
CCEP_UDP_SRC_PATH=/workspaces/lingaro-azure-py310-ccep-udp/src

# ==============================================================================
# Spark Configuration
# ==============================================================================
# Spark master (local for development)
SPARK_MASTER=local[*]

# Spark application name
SPARK_APP_NAME=CCEP-UDP-Development

# ==============================================================================
# Hadoop Configuration  
# ==============================================================================
# Hadoop filesystem (for local development)
HADOOP_FS_DEFAULT_NAME=hdfs://localhost:9000

# ==============================================================================
# Testing Configuration
# ==============================================================================
# Test data directories
TEST_DATA_INPUT_DIR=/workspaces/lingaro-azure-py310-ccep-udp/data/test/input
TEST_DATA_OUTPUT_DIR=/workspaces/lingaro-azure-py310-ccep-udp/data/test/output

# ==============================================================================
# Logging Configuration
# ==============================================================================
LOG_LEVEL=INFO
LOG_DIR=/workspaces/lingaro-azure-py310-ccep-udp/logs

# ==============================================================================
# Development Tools
# ==============================================================================
# Enable development mode features
DEV_MODE=true

# Pylint configuration
PYLINT_RCFILE=/workspaces/lingaro-azure-py310-ccep-udp/.pylintrc