{
  "name": "Lingaro Azure Py312 CCEP UDP Academy Container",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "lingaro-azure-py310-ccep-udp",
  "workspaceFolder": "/workspaces/lingaro-azure-py310-ccep-udp",
  "shutdownAction": "stopCompose",
  "postCreateCommand": "${containerWorkspaceFolder}/scripts/post-create.sh",
  "postAttachCommand": "${containerWorkspaceFolder}/scripts/post-attach.sh",
  "postStartCommand": "${containerWorkspaceFolder}/scripts/post-start.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.pylint",
        "ms-python.black-formatter"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.formatting.provider": "black",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true
      }
    }
  },
  "forwardPorts": [8000],
  "portsAttributes": {
    "8000": {
      "label": "Application",
      "onAutoForward": "notify"
    }
  }
}